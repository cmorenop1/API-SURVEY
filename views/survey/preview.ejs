<% include ../partials/header.ejs%>
<% include ../partials/main_nav.ejs%>

        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                   
                    
                    <% for(let count=0; count < survey.length; count++) { %>

                        <div class="container mt-3">
                            <h3>
                                <%= survey[count].question %>
                            </h3>



                            <% for(let secondCount=0; secondCount < survey[count].options.length;
                                secondCount++) { %>

                                <div class="form-check">
                                     <input class="form-check-input" type="radio" name="exampleRadios"
                                        id="exampleRadios<%= count %><%= secondCount %>" value="<%= survey[count].options[secondCount] %>"> 
                                    <label class="form-check-label" for="exampleRadios<%= count %><%= secondCount %>">
                                        <%= survey[count].options[secondCount] %>
                                    </label>
                                </div>
                            <% } %>


                        </div>
                    <% } %>

                    <div>
                        <a href="/question/add/<%= surveyId %>" class="btn btn-primary align-self-end" role="button">
                            <i class="fas fa-plus-circle"></i> 
                            Add a new question
                        </a>                
                    </div>

                    <div>
                        <a href="/" class="btn btn-primary align-self-end" role="button">
                            <i class="fas fa-check-circle"></i> 
                            Finish
                        </a>                
                    </div>

                </div>
            </div>
        </div>


<% include ../partials/footer.ejs%>